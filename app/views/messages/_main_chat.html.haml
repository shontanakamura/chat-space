.chat-main
  .chat-main__header
    .main-header__left-box
      .main-header__left-box__current-group
        k
      %ul.main-header__left-box__member-list 
        member:
        %li.main-header__left-box__member-list__member
          masa
    .main-header__edit-btn 
      = link_to "Edit","#"
  .chat-main__messages
    .chat-message
      .message__upper-info
        %p.message__upper-info__talker
          masa
        %p.message__upper-info__data
          2020/04/10(fri) 11:00:00
      .message__text
        こんにちは
  .chat-main__form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'input-box', placeholder: 'type a message'
      .input-box__image
        = f.label :image, class: 'input-box__image__text' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'submit-btn'
