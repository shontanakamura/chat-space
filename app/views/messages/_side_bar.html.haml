.side-bar
  .side-header
    .side-header__box
      %P.side-header__box__user__name
        = current_user.name
      %ul.side-header__box__menu
        %li.side-header__box__menu__new__group
          = link_to new_group_path do
            = icon('fas', 'edit', class: 'icon')
        %li.side-header__box__menu__new__edit__user
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .groups
    - current_user.groups.each do |group|
      .group-list
        = link_to group_messages_path(group), class:"group" do
          %p.group__name
            = group.name
          %p.group__message
            = group.show_last_message